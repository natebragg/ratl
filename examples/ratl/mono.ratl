(define mono_inc ([Nat] -> Nat) (xs)
    (if xs
        (if (tail xs)
            (if (< (head (tail xs)) (head xs))
                0
                (mono_inc (tail xs)))
            1)
        1))

(define mono_dec ([Nat] -> Nat) (xs)
    (if xs
        (if (tail xs)
            (if (< (head xs) (head (tail xs)))
                0
                (mono_dec (tail xs)))
            1)
        1))

(define main ([Nat] -> Nat) (xs)
    (if (mono_inc xs)
        1
        (mono_dec xs)))
